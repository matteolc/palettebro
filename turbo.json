{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": ["OPENAI_API_KEY"],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "format-and-lint": {},
    "format-and-lint:fix": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
